{
  "name": "@savana-tech/ui",
  "version": "1.0.0",
  "description": "Savana Design System - A unified collection of reusable components, design patterns, and guidelines to ensure consistency and efficiency in all Savana's digital products.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Desenvolvedor Savana",
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build:babel": "babel src --extensions \".js,.jsx,.ts,.tsx\" --out-dir dist --copy-files",
    "build:types": "tsc",
    "build": "npm run clean && npm run build:babel && npm run build:types",
    "android": "npx tsc && npx expo run:android",
    "ios": "npx tsc && npx expo run:ios",
    "lint": "npx prettier --write . && npx eslint ."
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.0",
    "@react-navigation/native": "^6.0.2",
    "expo": "~51.0.14",
    "expo-constants": "~16.0.2",
    "expo-font": "~12.0.7",
    "expo-linking": "~6.3.1",
    "expo-router": "~3.5.16",
    "expo-splash-screen": "~0.27.5",
    "expo-status-bar": "~1.12.1",
    "expo-system-ui": "~3.0.6",
    "expo-web-browser": "~13.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.2",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-reanimated": "~3.10.1",
    "react-native-safe-area-context": "4.10.1",
    "react-native-screens": "3.31.1",
    "react-native-web": "~0.19.10"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.7",
    "@babel/core": "^7.20.0",
    "@babel/plugin-transform-runtime": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.2.45",
    "@types/react-test-renderer": "^18.0.7",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "^8.57.0",
    "eslint-config-expo": "^7.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-universe": "^13.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unused-imports": "^4.0.0",
    "jest": "^29.2.1",
    "jest-expo": "~51.0.1",
    "prettier": "^3.3.2",
    "react-test-renderer": "18.2.0",
    "typescript": "~5.3.3"
  },
  "license": "UNLICENSED"
}
