{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "allowJs": true,
    "strict": true,
    "jsx": "react-native",
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext",
    "noEmit": false,
    "skipLibCheck": true
  },
  "include": [
    "src",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
